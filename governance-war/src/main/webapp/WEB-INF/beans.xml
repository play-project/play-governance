<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<bean id="serviceregistry" class="eu.playproject.governance.client.ServiceRegistry">
		<property name="url" value="http://localhost:8080/registry/RegistryService"/>
	</bean>

	<bean id="eventservice"
		class="eu.playproject.governance.service.EventGovernanceService">
		<property name="serviceRegistry" ref="serviceregistry" />
	</bean>

	<bean id="managementservice"
		class="eu.playproject.governance.service.GovernanceManagementService">
	</bean>

	<jaxws:endpoint id="event" implementor="#eventservice"
		address="/EventGovernance" />

	<jaxws:endpoint id="management" implementor="#managementservice"
		address="/ManagementService" />

</beans>